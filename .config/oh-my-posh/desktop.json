{
    "$schema": "https://raw.githubusercontent.com/JanDeDobbeleer/oh-my-posh/main/themes/schema.json",
    "blocks": [
        {
            "alignment": "left"
        },
        {
            "type": "prompt",
            "alignment": "left",
            "segments": [
                {
                    "options": {
                        "time_format": "15:04"
                    },
                    "leading_diamond": "ÓÇ∂",
                    "template": " üçª {{ .CurrentDate | date .Format }} ",
                    "foreground": "#2d3436",
                    "background": "#cc7439",
                    "type": "time",
                    "style": "diamond"
                },
                {
                    "options": {
                        "cache_duration": "none"
                    },
                    "template": "<parentBackground>ÓÇ∞</> Ôäí ",
                    "foreground": "#FFFB38",
                    "background": "#cc7439",
                    "type": "root",
                    "style": "diamond"
                },
                {
                    "options": {
                        "folder_icon": " ÔÅª ",
                        "home_icon": "Ôüù",
                        "style": "folder"
                    },
                    "template": " ÔÅª {{ .Path }} ",
                    "foreground": "#2d3436",
                    "powerline_symbol": "ÓÇ∞",
                    "background": "#FF9248",
                    "type": "path",
                    "style": "powerline"
                },
                {
                    "options": {
                        "branch_icon": "Óú• ",
                        "fetch_status": true,
                        "fetch_upstream_icon": true
                    },
                    "template": " {{ .UpstreamIcon }} {{ .HEAD }}{{if .BranchStatus }} {{ .BranchStatus }}{{ end }}{{ if .Working.Changed }} ÔÅÑ {{ .Working.String }}{{ end }}{{ if and (.Working.Changed) (.Staging.Changed) }} |{{ end }}{{ if .Staging.Changed }}<#ef5350> ÔÅÜ {{ .Staging.String }}</>{{ end }} ",
                    "foreground": "#011627",
                    "powerline_symbol": "ÓÇ∞",
                    "background": "#f1c056",
                    "type": "git",
                    "style": "powerline",
                    "background_templates": [
                        "{{ if or (.Working.Changed) (.Staging.Changed) }}#ffeb95{{ end }}",
                        "{{ if and (gt .Ahead 0) (gt .Behind 0) }}#c5e478{{ end }}",
                        "{{ if gt .Ahead 0 }}#C792EA{{ end }}",
                        "{{ if gt .Behind 0 }}#C792EA{{ end }}"
                    ]
                },
                {
                    "background": "#f5daa0",
                    "foreground": "#2d3436",
                    "options": {
                        "style": "roundrock",
                        "threshold": 0
                    },
                    "powerline_symbol": "ÓÇ∞",
                    "trailing_diamond": "ÓÇ¥",
                    "style": "diamond",
                    "template": " ‚è±Ô∏è {{ .FormattedMs }}‚†Ä",
                    "type": "executiontime"
                }
            ],
            "newline": true
        },
        {
            "type": "prompt",
            "alignment": "left",
            "segments": [
                {
                    "options": {
                        "always_enabled": true,
                        "cache_duration": "none"
                    },
                    "template": "> ",
                    "foreground": "#e0f8ff",
                    "type": "exit",
                    "style": "plain"
                }
            ],
            "newline": true
        }
    ],
    "version": 3
}
